<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#DB4336"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#DB4336"
            android:src="@drawable/baseline_article_24"

            android:text="" />

        <SearchView
            android:layout_width="match_parent"
            android:queryHint="Inbox"
            android:closeIcon="@drawable/round_clear_26"
            android:queryBackground="@color/white"
            android:layout_height="match_parent"
            android:background="#DB4336"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E1E1E1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_check_25"
            android:layout_weight="1"
            android:text="Button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:background="#E1E1E1"
            android:gravity="center"
            android:text="Touch a sender image to select that conservation"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E1E1E1"
            android:src="@drawable/round_clear_26"
            android:text="" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>